<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Citazioni.MainPage">


    <Grid x:Name="grdBackground">
        <Grid Margin="20" RowDefinitions=".9*,.1*">

            <Label Text="First solve the problem. Then write the code."
                   x:Name="lblQuote"
                   FontFamily="QuoteFont"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="40"
                   TextColor="White"/>
            <Button Text="Genera nuova"
                    x:Name="btnGenerateQuote"
                    Clicked="btnGenerateQuote_Clicked"
                    BackgroundColor="Black"
                    Grid.Row="1"
                    Opacity="0.4"
                    TextColor="White"
                    HeightRequest="50"/>
        </Grid>
    </Grid>
</ContentPage>
